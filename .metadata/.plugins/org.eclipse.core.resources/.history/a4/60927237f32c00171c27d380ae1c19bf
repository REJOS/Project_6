	// Assign memory to the tlb
	(*tlb) = (tlb_t *) malloc(sizeof(tlb_t));

	if ((*tlb) == NULL) {
		return -1;
	}

	int i;
	for (i = 0; i < TLB_SIZE; i++) {
//		(*tlb)->list[i] = NULL;
	}

	(*tlb)->size = 0;

	return 0;
}

